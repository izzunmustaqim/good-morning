<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/txtBranchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Malaysia (HQ)"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Good Morning Global Sdn Bhd"
                android:textColor="@color/color_secondary_text"
                android:textSize="@dimen/normal_text_size" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_secondary_text" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">


                    <com.applab.goodmorning.Utilities.SquareImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="top"
                        android:src="@mipmap/address_orange" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp" />


                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_morning"
                        android:textColor="@color/color_accent"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">


                    <com.applab.goodmorning.Utilities.SquareImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="top"
                        android:src="@mipmap/careline" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp" />


                    <TextView
                        android:id="@+id/txtCareline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0135489798"
                        android:textColor="@color/color_accent"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">


                    <com.applab.goodmorning.Utilities.SquareImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="top"
                        android:src="@mipmap/mobile" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp" />


                    <TextView
                        android:id="@+id/txtMobileNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0135489798"
                        android:textColor="@color/color_accent"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">

                    <com.applab.goodmorning.Utilities.SquareImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/phone_orange" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/txtTelNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/phone_number"
                        android:textColor="@color/color_accent"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">

                    <com.applab.goodmorning.Utilities.SquareImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fax" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/txtFaxNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/website"
                        android:textColor="@color/color_accent"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">

                    <com.applab.goodmorning.Utilities.SquareImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/website_orange" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/txtUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/email_morning"
                        android:textColor="@color/color_accent"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">

                    <com.applab.goodmorning.Utilities.SquareImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/email_orange" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/email_morning"
                        android:textColor="@color/color_accent"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">

                    <com.applab.goodmorning.Utilities.SquareImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/working_hour_orange" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/txtOperationHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/open_time"
                        android:textColor="@color/color_accent"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btnGoogleMap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/color_primary"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/google_map" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/google_map"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/small_text_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:id="@+id/btnWaze"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/color_light_blue"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/waze" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/waze"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/small_text_size" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>