<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.applab.goodmorning.Enquiry.fragment.GeneralFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/online_enquiry"
                    android:textColor="@color/color_primary_text"
                    android:textSize="@dimen/large_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="@string/we_love"
                    android:textColor="@color/color_secondary_text"
                    android:textSize="@dimen/normal_text_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_highlight"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/ediName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/name"
                        android:imeOptions="actionDone"
                        android:textColor="@color/color_input_text"
                        android:textColorHint="@color/color_secondary_text"
                        android:textSize="@dimen/normal_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_highlight"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/ediEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/emailses"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/color_input_text"
                        android:textColorHint="@color/color_secondary_text"
                        android:textSize="@dimen/normal_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_highlight"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/ediPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/phone"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:textColor="@color/color_input_text"
                        android:textColorHint="@color/color_secondary_text"
                        android:textSize="@dimen/normal_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_highlight">

                    <Spinner
                        android:id="@+id/spinner"
                        style="@style/Spinner.Main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:clickable="true"
                        android:focusable="true"
                        android:prompt="@string/purpose"
                        android:textColor="@color/color_input_text"
                        android:textSize="@dimen/smaller_text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlMessage"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_highlight"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/ediMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/messages"
                        android:gravity="top"
                        android:textColor="@color/color_input_text"
                        android:textColorHint="@color/color_secondary_text"
                        android:textSize="@dimen/normal_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnSend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_primary"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sends" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>
