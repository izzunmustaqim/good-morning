<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context=".Register.activity.RegisterActivity">

    <include
        android:id="@+id/appbar"
        layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.applab.goodmorning.Utilities.CustomInsetsLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_highlight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="15dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/login_details"
                                    android:textColor="@color/color_primary_text"
                                    android:textSize="17sp" />

                                <EditText
                                    android:id="@+id/etUsername"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/color_highlight"
                                    android:hint="@string/login_id"
                                    android:imeOptions="actionDone"
                                    android:inputType="text"
                                    android:padding="10dp"
                                    android:textColor="@color/color_primary_text"
                                    android:textColorHint="@color/color_secondary_text"
                                    android:textSize="@dimen/normal_text_size" />

                                <EditText
                                    android:id="@+id/etEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/color_highlight"
                                    android:hint="@string/email_address"
                                    android:imeOptions="actionDone"
                                    android:inputType="text"
                                    android:padding="10dp"
                                    android:textColor="@color/color_primary_text"
                                    android:textColorHint="@color/color_secondary_text"
                                    android:textSize="@dimen/normal_text_size" />

                                <EditText
                                    android:id="@+id/etPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/color_highlight"
                                    android:hint="@string/password"
                                    android:imeOptions="actionDone"
                                    android:inputType="textPassword"
                                    android:padding="10dp"
                                    android:textColor="@color/color_primary_text"
                                    android:textColorHint="@color/color_secondary_text"
                                    android:textSize="@dimen/normal_text_size" />

                                <EditText
                                    android:id="@+id/etConfirmPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/color_highlight"
                                    android:hint="@string/confirm_password"
                                    android:imeOptions="actionDone"
                                    android:inputType="textPassword"
                                    android:padding="10dp"
                                    android:textColor="@color/color_primary_text"
                                    android:textColorHint="@color/color_secondary_text"
                                    android:textSize="@dimen/normal_text_size" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="15dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/personal_details"
                                        android:textColor="@color/color_primary_text"
                                        android:textSize="17sp" />

                                    <EditText
                                        android:id="@+id/etSalutation"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:background="@color/color_highlight"
                                        android:hint="@string/salutation"
                                        android:imeOptions="actionDone"
                                        android:inputType="text"
                                        android:padding="10dp"
                                        android:textColor="@color/color_primary_text"
                                        android:textColorHint="@color/color_secondary_text"
                                        android:textSize="@dimen/normal_text_size" />

                                    <EditText
                                        android:id="@+id/etFirstName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:background="@color/color_highlight"
                                        android:hint="@string/first_name"
                                        android:imeOptions="actionDone"
                                        android:inputType="text"
                                        android:padding="10dp"
                                        android:textColor="@color/color_primary_text"
                                        android:textColorHint="@color/color_secondary_text"
                                        android:textSize="@dimen/normal_text_size" />

                                    <EditText
                                        android:id="@+id/etLastName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:background="@color/color_highlight"
                                        android:hint="@string/last_name"
                                        android:imeOptions="actionDone"
                                        android:inputType="text"
                                        android:padding="10dp"
                                        android:textColor="@color/color_primary_text"
                                        android:textColorHint="@color/color_secondary_text"
                                        android:textSize="@dimen/normal_text_size" />

                                    <EditText
                                        android:id="@+id/etPhone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:background="@color/color_highlight"
                                        android:hint="@string/phone"
                                        android:imeOptions="actionDone"
                                        android:inputType="phone"
                                        android:padding="10dp"
                                        android:textColor="@color/color_primary_text"
                                        android:textColorHint="@color/color_secondary_text"
                                        android:textSize="@dimen/normal_text_size" />

                                    <EditText
                                        android:id="@+id/etStreetAddress"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:background="@color/color_highlight"
                                        android:hint="@string/street_address"
                                        android:inputType="text"
                                        android:padding="10dp"
                                        android:textColor="@color/color_primary_text"
                                        android:textColorHint="@color/color_secondary_text"
                                        android:textSize="@dimen/normal_text_size" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:background="@color/color_highlight">

                                        <EditText
                                            android:id="@+id/etCity"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@null"
                                            android:hint="@string/city"
                                            android:imeOptions="actionDone"
                                            android:inputType="text"
                                            android:padding="10dp"
                                            android:textColor="@color/color_input_text"
                                            android:textColorHint="@color/color_secondary_text"
                                            android:textSize="@dimen/normal_text_size" />

                                        <LinearLayout
                                            android:layout_width="10dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/white" />

                                        <EditText
                                            android:id="@+id/etZipCode"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@null"
                                            android:hint="@string/post_code"
                                            android:imeOptions="actionDone"
                                            android:inputType="number"
                                            android:padding="10dp"
                                            android:textColor="@color/color_input_text"
                                            android:textColorHint="@color/color_secondary_text"
                                            android:textSize="@dimen/normal_text_size" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:background="@color/color_highlight"
                                        android:orientation="horizontal">

                                        <Spinner
                                            android:id="@+id/spinner_state"
                                            style="@style/Spinner.Main"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:background="@null"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:prompt="@string/country"
                                            android:textColor="@color/color_input_text"
                                            android:textSize="@dimen/smaller_text_size" />


                                        <LinearLayout
                                            android:layout_width="10dp"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/white" />

                                        <Spinner
                                            android:id="@+id/spinner_country"
                                            style="@style/Spinner.Main"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:background="@null"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:gravity="center"
                                            android:prompt="@string/country"
                                            android:textColor="@color/color_input_text"
                                            android:textSize="@dimen/smaller_text_size" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/cboCheck"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="16dp"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/imgCheck"
                                            android:layout_width="@dimen/check_size"
                                            android:layout_height="@dimen/check_size"
                                            android:layout_marginRight="8dp"
                                            android:src="@drawable/check_1_before" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="@string/billing_information"
                                            android:textColor="@color/color_accent"
                                            android:textSize="@dimen/normal_text_size" />
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardShippingAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:id="@+id/defShippingAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_shipping_address"
                                    android:textColor="@color/color_primary_text"
                                    android:textSize="17sp" />

                                <EditText
                                    android:id="@+id/etDefAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/color_highlight"
                                    android:hint="@string/address"
                                    android:padding="10dp"
                                    android:textColor="@color/color_primary_text"
                                    android:textColorHint="@color/color_secondary_text"
                                    android:textSize="@dimen/normal_text_size" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/color_highlight">

                                    <EditText
                                        android:id="@+id/etDefCity"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:hint="@string/city"
                                        android:imeOptions="actionDone"
                                        android:inputType="text"
                                        android:padding="10dp"
                                        android:textColor="@color/color_input_text"
                                        android:textColorHint="@color/color_secondary_text"
                                        android:textSize="@dimen/normal_text_size" />

                                    <LinearLayout
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/white" />

                                    <EditText
                                        android:id="@+id/etDefZipCode"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:hint="@string/post_code"
                                        android:imeOptions="actionDone"
                                        android:inputType="text"
                                        android:padding="10dp"
                                        android:textColor="@color/color_input_text"
                                        android:textColorHint="@color/color_secondary_text"
                                        android:textSize="@dimen/normal_text_size" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@color/color_highlight"
                                    android:orientation="horizontal">

                                    <Spinner
                                        android:id="@+id/spinner_def_state"
                                        style="@style/Spinner.Main"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:gravity="center"
                                        android:prompt="@string/country"
                                        android:textColor="@color/color_input_text"
                                        android:textSize="@dimen/smaller_text_size" />


                                    <LinearLayout
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/white" />

                                    <Spinner
                                        android:id="@+id/def_spinner_country"
                                        style="@style/Spinner.Main"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:gravity="center"
                                        android:prompt="@string/country"
                                        android:textColor="@color/color_input_text"
                                        android:textSize="@dimen/smaller_text_size" />
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="20dp">

                                    <Button
                                        android:id="@+id/btnRegister"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/color_grey"
                                        android:text="@string/continue_btn" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </com.applab.goodmorning.Utilities.CustomInsetsLayout>
        </ScrollView>


        <RelativeLayout
            android:id="@+id/fadeProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>